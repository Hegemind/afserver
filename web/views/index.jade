extends layout

block htmlhead
	link(rel='stylesheet', href='/stylesheets/index.css')

block content
	.container
		.navbar.navbar-default.navbar-fixed-top(role="navigation")
			ul.nav.navbar-nav
				li.active
					a(href="#") Link
				li
					a(href="#") Link
				li.dropdown
					a.dropdown-toggle(href="", data-toggle="dropdown") Dropdown <b class="caret"></b>
					ul.dropdown-menu
						li
							a(href="#") Link
						li
							a(href="#") Link
							
			form.navbar-form.navbar-left(role="search")
				.form-group
					input.form-control(type="text", placeholder="Search")
				button.btn.btn-default(type="submit") Go
			
		
		.panel
			h1 Hello!
			p Welcome to Alterfutura, #{username}.
			small You are not #{username}? <a href="/logout">Get the heck out!</a>
			
		.row
			each val in section
				.col-xs-6.col-sm-4.col-md-3.col-lg-2
					a(href="#{val.link}")
						.thumbnail
							img(src="#{val.image}")
							.caption
								small #{val.name}
