extends ../index

block section
	.row
		h1.col-md-8 Charsheets
	.row
		button.btn.btn-success(type="button")
			span.glyphicon.glyphicon-plus
			span Create new character
	.row
		.col-xs-6.col-sm-6.col-md-6.col-lg-6
			.btn-group
				button.btn.btn-default All
				button.btn.btn-default D&D4
				button.btn.btn-default Pathfinder
				button.btn.btn-default Vampire
		.col-xs-6.col-sm-6.col-md-6.col-lg-6
			input.form-control(type="email" placeholder="Filter...")
	
	.table-responsive
		table.table.table-striped.table-hover
			thead
				tr
					th Name
					th Description
					th Game
					th Since
					th Current campaign
					th Actions
			tbody#table_data
		
		p#infoNumberCharsheets
	
	
	script(src="/javascripts/charsheets.js")